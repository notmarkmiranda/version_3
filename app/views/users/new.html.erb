<div class="row">
  <div class="col-lg-3 col-lg-offset-5 col-xs-10 col-xs-offset-1">
<ul class="list-group">
  <li class="list-group-item btn-poker">
    <h3>
    SIGN UP OR SIGN IN!
  </h3>
  </li>
<%= form_for(User.new) do |f| %>
  <li class="list-group-item">
    <div class="form-group ">
      <%= f.label :email, "E-Mail Address" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group ">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password,  class: "form-control" %>
    </div>
    <div class="form-group ">
      <%= f.submit "Let's Go!", class: "btn btn-poker" %>
    </div>
  </li>
<% end %>
</ul>
</div>
</div>
