<div class="container table-responsive">
  <table class="table table-striped text-center">
    <thead class="text-center">
      <tr class="header-row">
        <td>#</td>
        <td>Date</td>
        <td>Players</td>
        <td>Buy In</td>
        <td>Pot Size</td>
        <td>Winner</td>
        <td>Status</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @games.each_with_index do |game, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= game.full_date %></td>
        <td><%= game.player_count %></td>
        <td><%= number_to_currency(game.buy_in_amount) %></td>
        <td><%= number_to_currency(game.pot) %></td>
        <td><%= game.first_or %></td>
        <td><%= game.active_status %></td>
        <td>
          <% if game.active %>
          <button class="btn btn-poker">
            Score Game
          </button>
          <button class="btn btn-poker">
            Cancel Game
          </button>
          <% else %>
          <button class="btn btn-poker">
            Edit Game
          </button>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
