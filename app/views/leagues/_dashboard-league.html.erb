<div class="panel panel-default leagues">
  <div class="panel-body row">
    <div class="col-sm-12">
      <h2 class="league-name text-center"><%= link_to league.name, league_path(league), class: "league-link" %></h2>
      <div class="stats">
        <%= render partial: "leagues/league-stats", locals: { league: league } %>
      </div>
    </div>
    <div class="col-sm-12 league-actions">
      <div class="col-sm-4 col-xs-12 league-actions col-btn">
        <%= link_to "View League Details", league_path(league), class: "btn btn-poker btn-block" %>
      </div>
      <div class="col-sm-4 col-xs-12 league-actions col-btn">
        <button type="button" class="btn btn-poker btn-block" data-toggle="modal" data-target="#scheduleGame-<%= league.slug %>">
          Schedule Game
        </button>
      </div>
      <div class="col-sm-4 col-xs-12 league-actions col-btn">
        <%= link_to "League Settings", "#", class: "btn btn-poker btn-block " %>
      </div>
    </div>
  </div>
</div>
