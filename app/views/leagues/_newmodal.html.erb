<div class="modal fade" id="newLeague" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header poker-bg">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New League!</h4>
      </div>
      <div class="modal-body">
        <%= form_for League.new do |f| %>
        <div class="form-group">
          <%= f.label :name, "League Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Create!", class: "btn btn-poker" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
