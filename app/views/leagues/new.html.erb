<div class="row">
  <div class="col-lg-3 col-lg-offset-5 col-xs-10 col-xs-offset-1">
    <ul class="list-group">
      <li class="list-group-item btn-poker">
        <h3>New League!</h3>
      </li>
      <%= form_for League.new do |f| %>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :name, "League Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create League!", class: "btn btn-poker" %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
